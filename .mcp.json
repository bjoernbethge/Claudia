{
  "mcpServers": {
    "memory": {
      "type": "stdio",
      "command": "npx",
      "args": ["-y", "@anthropic/mcp-memory"]
    },

    "playwright": {
      "type": "stdio",
      "command": "npx",
      "args": ["-y", "@executeautomation/playwright-mcp-server"],
      "env": {
        "PLAYWRIGHT_HEADLESS": "${PLAYWRIGHT_HEADLESS:-true}",
        "PLAYWRIGHT_BROWSER": "${PLAYWRIGHT_BROWSER:-chromium}"
      }
    },

    "duckdb": {
      "type": "stdio",
      "command": "uv",
      "args": [
        "run",
        "--directory",
        "D:/projects/Claudia/src/mcp/duckdb_server",
        "python",
        "-m",
        "duckdb_server.server"
      ],
      "env": {
        "DUCKDB_PATH": "D:/projects/Claudia/data/claudia.db"
      }
    }
  }
}
